{
  "manifest_version": 2,
  "name": "CookieMimic",
  "version": "1.0.0",
  
  "homepage_url": "https://github.com/jesusnoseq/CookieMimic",
  "description": "Mimics the behavior, clone or remove, of cookies in a domain to another",

  "applications": {
    "gecko": {
      "id": "CookieMimic@jesusnoseq.addons.mozilla.org",
      "strict_min_version": "57.0"
    }
  },

  "icons": {
    "48": "icons/Icon48.png",
    "96": "icons/Icon96.png"
  },

  "browser_action": {
    "default_icon": "icons/Icon48.png",
    "default_title": "CookieMimic"
  },

  "options_ui": {
    "page": "ui/editDomains.html",
    "browser_style": true
  },

  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "notifications",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  }

}